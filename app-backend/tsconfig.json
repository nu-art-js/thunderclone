{
  "compilerOptions": {
    "baseUrl": "./src/main",
    "composite": false,
    "declaration": true,
    "experimentalDecorators": true,
    "incremental": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "rootDir": "./src/main",
    "outDir": "dist",
    "paths": {
      "@consts/*": [
        "consts/*"
      ],
      "@modules/*": [
        "modules/*"
      ]
    },
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": [
    "src/test/**/*.ts",
    "node_modules"
  ],
  "include": [
    "src/main/**/*.ts",
    "node_modules/**/*.js"
  ]
}
